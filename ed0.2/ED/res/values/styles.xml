<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="loading_dialog" parent="android:style/Theme.DeviceDefault.Dialog.NoActionBar">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/shape_progress_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Progress" />

    <style name="Progress.loading" parent="@android:style/Widget.Holo.Light.ProgressBar.Inverse">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="progress_text">
        <item name="android:text">请稍候...</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white_text</item>
    </style>

    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@drawable/shape_dialog_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="Common" />

    <style name="Common.Dialog" />

    <style name="Common.Dialog.Icon">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="Common.Dialog.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Common.Dialog.Content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_text</item>
    </style>

    <style name="Common.Dialog.Button">
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:background">@drawable/selector_button_bg_dialog_default</item>
    </style>

    <style name="BaseTextViewStyle" parent="@android:style/Widget.TextView" />

    <style name="BaseButtonStyle" parent="@android:style/Widget.Button" />

    <style name="BaseEditTextStyle" parent="@android:style/Widget.EditText" />

    <style name="BaseCheckBoxStyle" parent="@android:style/Widget.CompoundButton.CheckBox" />

    <style name="BaseRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton" />

    <style name="BaseToggleButtonStyle" parent="@android:style/Widget.Button.Toggle" />

    <style name="BaseAutoCompleteTextViewStyle" parent="@android:style/Widget.AutoCompleteTextView" />

    <style name="BaseAppTheme" parent="@android:style/Theme.Light.NoTitleBar" />

    <!-- by chensn 20158.13 -->
    <style name="BottomDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- userinfo -->
    <style name="ActionSheetStyleiOS7">
        <item name="actionSheetBackground">@android:color/transparent</item>
        <item name="cancelButtonBackground">@drawable/slt_as_ios7_cancel_bt</item>
        <item name="otherButtonTopBackground">@drawable/slt_as_ios7_other_bt_top</item>
        <item name="otherButtonMiddleBackground">@drawable/slt_as_ios7_other_bt_middle</item>
        <item name="otherButtonBottomBackground">@drawable/slt_as_ios7_other_bt_bottom</item>
        <item name="otherButtonSingleBackground">@drawable/slt_as_ios7_other_bt_single</item>
        <item name="cancelButtonTextColor">#656d78</item>
        <item name="otherButtonTextColor">#656d78</item>
        <item name="actionSheetPadding">15dp</item>
        <item name="otherButtonSpacing">0dp</item>
        <item name="cancelButtonMarginTop">10dp</item>
        <item name="actionSheetTextSize">18sp</item>
    </style>

    <style name="translucent">
        <item name="android:windowBackground">@color/translucent_background</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
<style name="j_timepopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/j_anim_enter_bottom</item> <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/j_anim_exit_bottom</item> <!-- 指定消失的动画xml -->
    </style>

</resources>