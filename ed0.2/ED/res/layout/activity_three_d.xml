<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucent_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white_background"
        android:orientation="vertical" >

        <GridView
            android:id="@+id/gridView1"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:background="@color/white_background"
            android:gravity="center"
            android:listSelector="@android:color/transparent"
            android:numColumns="5"
            android:padding="8dp"
            android:stretchMode="columnWidth"
            android:verticalSpacing="5dp" >
        </GridView>

        <LinearLayout
            android:id="@+id/itemlv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_background"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="3dp"
                    android:text="设置身材数据"
                     android:textColor="@color/text_black"  />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(拖动调整属于你的满意身材)"
                    android:textColor="@color/text_hit"
                    android:textSize="11sp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/lvtext1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="14dp"
                android:paddingLeft="20dp"
                android:paddingRight="10dp" >

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingRight="5dp"
                    android:text="杯罩"
                    android:textColor="@color/text_black" />

                <SeekBar
                    android:id="@+id/seekBar1"
                    android:layout_width="216dp"
                    android:layout_height="15dp"
                    android:layout_centerHorizontal="true"
                    android:progress="50"
                    android:progressDrawable="@drawable/selector_seekbarbackground"
                    android:secondaryProgress="0"
                    android:thumb="@drawable/selector_thumb"
                    android:thumbOffset="0dp" />

                <TextView
                    android:id="@+id/textsize1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="20dp"
                    android:text="D"
                    android:textColor="@color/text_black" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lvtext2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="14dp"
                android:paddingLeft="20dp"
                android:paddingRight="10dp" >

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingRight="5dp"
                    android:text="胸围"
                    android:textColor="@color/text_black" />

                <SeekBar
                    android:id="@+id/seekBar2"
                    android:layout_width="216dp"
                    android:layout_height="15dp"
                    android:layout_centerHorizontal="true"
                    android:progress="50"
                    android:progressDrawable="@drawable/selector_seekbarbackground"
                    android:secondaryProgress="0"
                    android:thumb="@drawable/selector_thumb"
                    android:thumbOffset="0dp" />

                <TextView
                    android:id="@+id/textsize2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="36cm"
                    android:textColor="@color/text_black" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lvtext3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="14dp"
                android:paddingLeft="20dp"
                android:paddingRight="10dp" >

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingRight="5dp"
                    android:text="腰围"
                    android:textColor="@color/text_black" />

                <SeekBar
                    android:id="@+id/seekBar3"
                    android:layout_width="216dp"
                    android:layout_height="15dp"
                    android:layout_centerHorizontal="true"
                    android:progress="50"
                    android:progressDrawable="@drawable/selector_seekbarbackground"
                    android:secondaryProgress="0"
                    android:thumb="@drawable/selector_thumb"
                    android:thumbOffset="0dp" />

                <TextView
                    android:id="@+id/textsize3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="28cm" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lvtext4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="14dp"
                android:paddingLeft="20dp"
                android:paddingRight="10dp" >

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingRight="5dp"
                    android:text="臀围"
                    android:textColor="@color/text_black" />

                <SeekBar
                    android:id="@+id/seekBar4"
                    android:layout_width="216dp"
                    android:layout_height="15dp"
                    android:layout_centerHorizontal="true"
                    android:progress="50"
                    android:progressDrawable="@drawable/selector_seekbarbackground"
                    android:secondaryProgress="0"
                    android:thumb="@drawable/selector_thumb"
                    android:thumbOffset="0dp" />

                <TextView
                    android:id="@+id/textsize4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="39cm"
                    android:textColor="@color/text_black" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lvtext5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="14dp"
                android:paddingLeft="20dp"
                android:paddingRight="10dp" >

                <TextView
                    android:id="@+id/text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingRight="5dp"
                    android:text="身高"
                    android:textColor="@color/text_black" />

                <SeekBar
                    android:id="@+id/seekBar5"
                    android:layout_width="216dp"
                    android:layout_height="15dp"
                    android:layout_centerHorizontal="true"
                    android:progress="50"
                    android:progressDrawable="@drawable/selector_seekbarbackground"
                    android:secondaryProgress="0"
                    android:thumb="@drawable/selector_thumb"
                    android:thumbOffset="0dp" />

                <TextView
                    android:id="@+id/textsize5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="39cm"
                    android:textColor="@color/text_black" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lvtext6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="14dp"
                android:paddingLeft="20dp"
                android:paddingRight="10dp" >

                <TextView
                    android:id="@+id/text6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingRight="5dp"
                    android:text="体重"
                    android:textColor="@color/text_black" />

                <SeekBar
                    android:id="@+id/seekBar6"
                    android:layout_width="216dp"
                    android:layout_height="15dp"
                    android:layout_centerHorizontal="true"
                    android:progress="50"
                    android:progressDrawable="@drawable/selector_seekbarbackground"
                    android:secondaryProgress="0"
                    android:thumb="@drawable/selector_thumb"
                    android:thumbOffset="0dp" />

                <TextView
                    android:id="@+id/textsize6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="39cm"
                    android:textColor="@color/text_black" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/comm_tilte_background"
                android:padding="10dp" >

                <ImageView
                    android:id="@+id/three_d_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/three_d_save" />

                <ImageView
                    android:id="@+id/three_d_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/three_d_cancel" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>