<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="16dp"
        >
        <ImageView 
            android:id="@+id/img_order_photo"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:src="@drawable/order_photo"
            />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:orientation="horizontal"
                >
            <TextView 
                android:id="@+id/tv_order_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Running man 2016 夏季"
                android:textSize="13sp"
                />
            <TextView 
                android:id="@+id/tv_order_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="￥3550"
                android:textSize="13sp"
                />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:orientation="horizontal"
                >
            <TextView 
                android:id="@+id/tv_order_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京站"
                android:textSize="13sp"
                />
            <TextView 
                android:id="@+id/tv_order_sender_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="朴东旭"
                android:textSize="13sp"
                />
            <TextView 
                android:id="@+id/tv_order_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="连衣裙"
                android:textSize="13sp"
                />
            </LinearLayout>
            <TextView 
                android:id="@+id/tv_order_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="12dp"
                android:text="170cm/L码（罩杯c/胸围32/腰围26/臀围32）"
                android:textSize="11sp"
                android:textColor="@color/color_gray"
                />
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal"
                >
                <TextView 
                    android:id="@+id/tv_pay_extra_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="包邮"
                    android:textSize="14sp"
                    />
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right"
                    >
                <TextView 
                    android:id="@+id/tv_new_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥3225"
                    android:textSize="14sp"
                    android:textColor="@color/color_red"
                    />
                <RelativeLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >
                <TextView 
                    android:id="@+id/tv_old_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    
                    android:text="￥3666"
                    android:textSize="12sp"
                    android:textColor="@color/color_gray"
                    />
                <View 
                    android:layout_width="50dp"
                    android:layout_height="2dp"
                    android:layout_centerInParent="true"
                    android:background="#FF0000"
                    />
                </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    

</LinearLayout>
