<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/comm_tilte_background"
        android:orientation="vertical" 
      >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tab_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/tab_home_bg"
                android:gravity="center"
                android:padding="@dimen/shape_corners"
                android:text="逛街"
                android:textColor="@color/hometab_text_color"
                android:textSize="@dimen/small_font" />

            <TextView
                android:id="@+id/tab_show"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/tab_show_bg"
                android:gravity="center"
                android:padding="@dimen/shape_corners"
                android:text="秀秀"
                android:textColor="@color/hometab_text_color"
                android:textSize="@dimen/small_font" />

            <TextView
                android:id="@+id/tab_my"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/tab_my_bg"
                android:gravity="center"
                android:padding="@dimen/shape_corners"
                android:text="闺房"
                android:textColor="@color/hometab_text_color"
                android:textSize="@dimen/small_font" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_layout"
        android:background="@color/comm_tilte_background"
        android:orientation="vertical" />

</RelativeLayout>