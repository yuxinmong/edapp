<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/titlebar_height"
    android:background="@color/comm_tilte_background"
    android:orientation="horizontal" >
    <LinearLayout 
        android:id="@+id/btnBack"
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:layout_weight="1"
	    android:gravity="center"
	    android:orientation="horizontal"
	    android:background="@drawable/selector_button_titlebar_bg">
	    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nav_back"/>
	</LinearLayout>
 
	<LinearLayout 
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:layout_weight="5"
	    android:orientation="horizontal"
	    android:gravity="center">
		<TextView
		    android:id="@+id/nav_title"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="@dimen/titlebar_margin"
		    android:gravity="center"
		    android:text="登录"
		    android:textColor="@color/gray_text"
		    android:textSize="@dimen/title_font_size" />

	</LinearLayout>
	
	  <LinearLayout 
	      android:id="@+id/info_finish_lt"
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:layout_weight="1"
	    android:gravity="center_vertical"
	    android:orientation="horizontal"
	     android:clickable="true"
        android:background="@drawable/selector_button_titlebar_bg"
	    >
          <TextView
                  android:id="@+id/info_finish"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="18sp"
                  android:textColor="@color/able"
                  android:text="保存"
                  android:visibility="gone"/>
          <ImageView
                  android:id="@+id/iv_right"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:visibility="gone"/>
	</LinearLayout>

	
</LinearLayout>
