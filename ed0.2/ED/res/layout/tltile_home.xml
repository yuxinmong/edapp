<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/titlebar_height"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="23dp"
    android:paddingRight="23dp"
    android:background="@color/comm_tilte_background"
    android:orientation="horizontal" >
    <LinearLayout 
        android:id="@+id/cecodelv"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:gravity="center"
	    android:orientation="horizontal"
	    android:layout_alignParentLeft="true">
	    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cecode"/>
	</LinearLayout>
   
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:gravity="center"
	    android:orientation="horizontal"
	    android:layout_centerInParent="true">

	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:gravity="center"
	        android:orientation="horizontal"
	        >

	    <ImageView 
	        android:id="@+id/ed"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="left"
	        android:src="@drawable/ed"
	       />
	    <TextView
	        android:id="@+id/area"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:drawableRight="@drawable/more" 
	        android:text="深圳"
	        android:textSize="18sp"
	        android:layout_marginLeft="2dp"
	        android:textColor="@color/background_dark"/>
	    </LinearLayout>
	</LinearLayout>
	
	  <LinearLayout 
	      android:id="@+id/buy_carlv"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:gravity="center"
	    android:orientation="horizontal"
	     android:clickable="true"
        android:background="@drawable/selector_button_titlebar_bg"
	  android:layout_alignParentRight="true" >
    
          <ImageView
                  android:id="@+id/buy_car"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                 android:src="@drawable/buy_car"
                 android:layout_gravity="center_vertical"/>
	</LinearLayout>

	
</RelativeLayout>
